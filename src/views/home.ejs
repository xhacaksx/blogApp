<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    
    <div class="container mt-3">
      <div class="row">
          <% blogs.forEach(blog => { %>
            <div class="col-md-3 mb-3">
              <div class="card" style="width: 16rem; height: 9rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/api/v1/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
          <% }) %>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
